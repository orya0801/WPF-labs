<Window x:Class="InkCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InkCanvas"
        mc:Ignorable="d"
        Title="Ink Pad" Height="550" Width="370" Background="LightGray">
    <Grid>
        <InkCanvas Name="inkCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Yellow"/>
        <Button Name="button1" Content="Clear" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="40" Click="button1_Click"/>
        <Button Name="button2" Content="Close" HorizontalAlignment="Right" Height="20" VerticalAlignment="Top" Width="40" Click="button2_Click"/>

    </Grid>
</Window>
